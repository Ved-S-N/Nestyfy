<% layout("/layouts/boilerplate") -%> <% success %>
<body>
  <style>
    #filters {
      display: flex;
      position: relative;
      overflow: hidden;
      align-items: center;
    }
    .filter-container {
      display: flex;
      text-align: center;
      overflow-x: auto;
      white-space: nowrap;
      gap: 1rem;
      scroll-behavior: smooth;
      scrollbar-width: none;
      max-width: 100%;
      margin-top: 1rem;
      margin-right: 2rem;
      margin-bottom: 2rem;
    }
    .filter::-webkit-scrollbar {
      display: none;
    }
    .filter {
      white-space: nowrap;
      padding: 1rem 1rem 0.5rem 1rem;
      background-color: #fff;
      border: 1px solid #ccc;
      border-radius: 1rem;
      cursor: pointer;
      transition: background-color 0.3s ease;
      width: 8rem;
      text-align: center;
    }
    .filter:hover {
      opacity: 1;
    }
    .scroll-btn {
      background-color: white;
      border: 1px solid #ccc;
      border-radius: 4rem;
      font-size: 1.5rem;
      width: 4rem;
      height: 3rem;
      margin-right: 2rem;
      margin-left: 2rem;
      justify-content: center;
      align-items: center;
      padding-top: 0;
      cursor: pointer;
      /* z-index: 1; */
    }
    .filter p {
      font-size: 0.8rem;
    }
    .filter i {
      font-size: 1.3rem;
    }
    .tax-info {
      display: none;
    }
    .switch-toggle {
      padding: 0.8rem;
      border: 1.2px solid black;
      border-radius: 1.25rem;
      height: 3.25rem;
      margin-top: 1rem;
      margin-left: 5rem;

      display: flex;
      align-items: center;
    }
  </style>

  <div id="filters">
    <button class="scroll-btn left" onclick="scrollFilters('left')">
      &#8249;
    </button>
    <div class="filter-container" id="filterScroll">
      <div class="filter">
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Iconic cities</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-cable-car"></i>
        <p>Thrills</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-mountain"></i>
        <p>Mountains</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-vihara"></i>
        <p>Traditional</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-person-swimming"></i>
        <p>Pools</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-tree"></i>
        <p>Nature</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-tents"></i>
        <p>Nature</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-map"></i>
        <p>Uncharted</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-tractor"></i>
        <p>Nature</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-snowflake"></i>
        <p>Artic</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-chess-rook"></i>
        <p>Castle</p>
      </div>
      <div class="switch-toggle">
        <div class="form-check form-switch form-check-reverse">
          <input
            class="form-check-input"
            type="checkbox"
            role="switch"
            id="switchCheckDefault"
          />
          <label class="form-check-label" for="switchCheckDefault"
            >Display taxes</label
          >
        </div>
      </div>
    </div>
    <button class="scroll-btn right" onclick="scrollFilters('right')">
      &#8250;
    </button>
  </div>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings) { %>
    <a href="/listings/<%= listing._id%>" class="listing-id">
      <div class="card col listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
        <div class="card-img-overlay">tmkc</div>
        <div class="card-body">
          <p class="card-text">
            <b> <%= listing.title%> </b><br />
            &#8377;<%= listing.price.toLocaleString("en-IN")%> / night
            <i class="tax-info"> +18 % GST</i>
          </p>
        </div>
      </div>
    </a>

    <% } %>
  </div>
  <br /><br />
</body>
<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
<script>
  function scrollFilters(direction) {
    const container = document.getElementById("filterScroll");
    const scrollAmount = 250;

    if (direction === "left") {
      container.scrollBy({ left: -scrollAmount, behavior: "smooth" });
    } else {
      container.scrollBy({ left: scrollAmount, behavior: "smooth" });
    }
  }
</script>
